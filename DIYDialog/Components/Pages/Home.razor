@page "/"
@using DIYDialog.Components.Shared

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<div>
    <button class="btn btn-primary" @onclick="ShowDialogBox">Show Dialog Box</button>
    <button class="btn btn-primary" @onclick="ShowConfirmDialogBox">Show Confirm Dialog Box</button>
    <button class="btn btn-primary" @onclick="ShowPromptDialogBox">Show Prompt Dialog Box</button>
</div>

<DialogBox @ref="dialogBox"></DialogBox>

@code{
    private DialogBox dialogBox;

    private async Task ShowDialogBox()
    {
        await dialogBox.Show("Hello world!", "Alert");
    }

    private async Task ShowConfirmDialogBox()
    {
        var confirmed = await dialogBox.ShowConfirmBox("Are you sure?", "Confirm");
        Console.WriteLine(confirmed);
    }
    
    private async Task ShowPromptDialogBox()
    {
        var promptResult = await dialogBox.ShowPromptBox("How old are you?", "Prompt");
        Console.WriteLine(promptResult);
    }
}